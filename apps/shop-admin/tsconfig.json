{
  "extends": "@review-canvas/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*",
        "../../packages/admin-ui/src/*"
      ]
    },
    "jsxImportSource": "@emotion/react",
    "types": [
      "@review-canvas/admin-ui/declared-types"
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
