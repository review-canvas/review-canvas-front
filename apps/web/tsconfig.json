{
  "extends": "@review-canvas/typescript-config/nextjs.json",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "jsxImportSource": "@emotion/react",
    "types": [
      "./src/@types/twin.d.ts"
    ],
    "strict": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/scripts"
  ]
}
