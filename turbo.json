{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "web#build": {},
    "shop-admin#build": {
      "dependsOn": ["@review-canvas/admin-ui#build"]
    },
    "super-admin#build": {
      "dependsOn": ["@review-canvas/admin-ui#build"]
    },
    "lint": {},
    "type-check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "start": {
      "dependsOn": ["^build"],
      "persistent": true,
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    }
  }
}
